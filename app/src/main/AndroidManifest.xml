<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keviniswara.bookinglapangtest">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.keviniswara.bookinglapangtest.MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>
        <activity android:name="com.example.keviniswara.bookinglapangtest.login.view.LoginActivity">

        </activity>
        <activity android:name="com.example.keviniswara.bookinglapangtest.login.view.RegisterActivity">

        </activity>
        <activity android:name="com.example.keviniswara.bookinglapangtest.keeper.KeeperActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>
        <activity android:name="com.example.keviniswara.bookinglapangtest.admin.AdminActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>
        <activity android:name="com.example.keviniswara.bookinglapangtest.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="com.example.keviniswara.bookinglapangtest.utils.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>