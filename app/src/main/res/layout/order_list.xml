<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_field_tilt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/icon_field_tilt"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/icon_field_tilt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/field_id"
                    android:text="YPKP"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:id="@+id/sport"
                    android:text="Futsal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 MEI"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/date"/>
                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:src="@drawable/ic_circle"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/start_hour"
                        android:text="19.00"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status_n_verifikasi"
                        android:background="@drawable/button_grey"
                        android:visibility="gone"
                        android:padding="3dp"
                        android:id="@+id/not_verified"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status_n_transfer"
                        android:background="@drawable/button_grey"
                        android:visibility="gone"
                        android:padding="3dp"
                        android:id="@+id/not_transfer"/>

                    <TextView
                        android:id="@+id/transfered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_green"
                        android:padding="3dp"
                        android:text="@string/order_status_sukses"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status_gagal"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:background="@drawable/button_red"
                        android:padding="3dp"
                        android:id="@+id/failed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status_waiting_confirmation"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:background="@drawable/button_grey"
                        android:padding="3dp"
                        android:id="@+id/finalConfirm"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


</layout>
