<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/parent_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_data"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Pemesan"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider"/>
            </LinearLayout>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Nama Pemilik Rekening"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_input_background"
                    android:layout_weight="3"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/befote_text"
                    android:paddingRight="@dimen/befote_text" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="No. Telepon"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_input_background"
                    android:layout_weight="3"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/befote_text"
                    android:paddingRight="@dimen/befote_text"
                    android:inputType="phone"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/resized_triangle_icon"
            android:background="@drawable/button_green"
            android:text="Bayar"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/resized_triangle_icon"
            android:padding="2dp"
            android:minHeight="20dp"
            android:id="@+id/button_pay">
        </Button>

    </LinearLayout>

</layout>