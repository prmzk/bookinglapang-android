<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.status.view.StatusFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_order" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_confirmation"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/divider" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/pilih_lapangan"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/field_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/pilih_olahraga"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/sport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/tanggal_main"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/jam_main"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/start_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/jam_selesai"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/end_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/nama_pemesan"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/order_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/nama_pemilik_rekening"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/rekening_owner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/bank"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/bank_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/jumlah"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/transferPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_input_background"
                        android:layout_weight="3"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:editable="false"
                        android:paddingLeft="@dimen/befote_text"
                        android:paddingRight="@dimen/befote_text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_span="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="Feedback"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/feedback"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:background="@drawable/form_input_background"
                            android:cursorVisible="true"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine"
                            android:paddingLeft="@dimen/befote_text"
                            android:paddingRight="@dimen/befote_text"
                            tools:text="sd as das dsa dsa da das dsa da ds ada as das dd a s das d asd asd  sd ad asd as dsa das dsa das dsa dsadsa das dsad" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/last_update"
                        android:layout_span="4" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/available_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_green"
                        android:minHeight="20dp"
                        android:text="@string/order_action_avaiable"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/not_available_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:minHeight="20dp"
                        android:text="@string/order_action_n_avaiable"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/already_transfer_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_green"
                        android:minHeight="20dp"
                        android:text="@string/sudah_transfer"
                        android:textAllCaps="false"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/failed_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:minHeight="20dp"
                        android:text="@string/gagal"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"/>

                    <Button
                        android:id="@+id/waitingConfirmation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_grey"
                        android:minHeight="20dp"
                        android:text="@string/order_status_final_confirmation"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:visibility="gone"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>

</layout>